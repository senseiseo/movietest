<% provide :page_title, "Home"%>
<% currently_at 'Home'%>

<h1 class="mb-4">Home</h1>
<%= link_to 'New movie', new_movie_path, class: 'btn btn-primary btn-lg mb-3' %>

<%= pagination @pagy %>

<% @movies.each do |movie| %>
  <article class="card mt-3 mb-3">
    <div class="card-body">
      <h4><%= link_to movie.title, movie_path(movie) %></h4>
      <h4><%= truncate strip_tags(movie.body), length: 150, omission: '... (continued)'%> </h4>
      <h4><%= movie.ratings%></h4>
      <div class="js_create_ratings" data-type="add" data-id= "1">
        <div class="col-sm-10">
          <%=select :stars, Rating::STARS, prompt: "Pick stars", class: "form-control" %>
          <div class=" data-type="add data-id="<%= movie.id %>">
            <%= link_to 'create rating',  class: "js_create_ratings" %>
          </div>
        </div>
      </div>
      <h4>
        <% movie.categories&.each do |category| %>
          <%= link_to category.name, category_path(category)%>
        <% end %>
      </h4>
    </div>
  </article>
<% end %> 

<%= pagination @pagy %>