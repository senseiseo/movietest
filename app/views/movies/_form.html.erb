<%= render 'shared/errors', object: @movie %>
<%= form_with model:  @movie do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :category %>
    </div>

    <div class="col-sm-10">
      <%= f.collection_select :category, Category.order(:name), :id, :name, {}, multiple: true, class:'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit movie!", class: 'btn btn-primary' %>
<% end %>