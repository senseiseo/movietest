<h1 class="mb-4">Home</h1>

<% @all_movies.each do |movie| %>
  <article class="card mt-3">
    <div class="card-body">

      <h4><%= link_to movie.title, category_movie_path(movie.category, movie) %></h4>
      <h4><%= movie.body %></h4>
      <h4><%= movie.category.name %></h4>
    </div>
  </article>
<% end %> 