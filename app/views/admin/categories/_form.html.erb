<%= render 'shared/errors', object: category %>
<%= form_with model: [:admin, category] do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit  "Save", class: 'btn btn-primary btn-lg' %>
<% end %>